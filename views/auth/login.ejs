<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="stylesheets/loginSignUp.css">
    </head>

    <body>
        <%- include('../includes/navbasic.ejs') %>
            <main>
                <div class='container'>
                    <div class="container-login">
                        <div class='form-container-login form-container'>
                            <form class="login-form form" method="POST" action="/login" novalidate>                                
                                <div class="header">
                                    <div class="green"></div>
                                    <div class="yellow"></div>
                                    <div class="blue"></div>
                                    <h1>Login!</h1>
                                </div>
                                <label for="email" >Email address</label>
                                <p>
                                    <input type="email" name="email" id="email" class="form-control"  value="<%= oldInput.email %>" required autofocus>
                                </p>
                                <label for="password" >Password</label>
                                <p>
                                    <input type="password" name="password" class="form-control"  value="<%= oldInput.password %>" required autofocus>
                                </p>
                                <% if (errorMessage) { %>
                                    <div class="erroMessage">
                                        <%= errorMessage %>
                                    </div>
                                    <% } %>
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <br>
                                        <p>
                                            <input type="submit" value="Login">
                                        </p>
                                        <!-- <button type="submit">Login</button> -->
                                        <!-- <p class="mt-5 mb-3 text-muted">&copy; 2021</p> -->
                            </form>
                        </div>
                    </div>
                </div>
            </main>
            <%- include('../includes/foot.ejs') %>