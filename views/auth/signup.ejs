                    <div class="container-2">
                        <div class='form-container'>
                            <form class="signup-form" action="/signup" method="POST" novalidate>
                                <div class="header">
                                    <div class="green"></div>
                                    <div class="yellow"></div>
                                    <div class="blue"></div>
                                    <h1>Sign Up!</h1>
                                </div>
                                <label for="inputEmail">Email address</label>
                                <p>
                                    <input type="email" name="email" id="email" class="form-control" value="<%= oldInput.email %>" required autofocus>
                                </p>
                                <label for="inputPassword">Password</label>
                                <p>
                                    <input type="password" id="password" name="password" class="form-control"  value="<%= oldInput.password %>" required autofocus>
                                </p>
                                <label for="confirmPassword">Confirm Password</label>
                                <p>
                                    <input type="password" id="confirm-password" name="confirmPassword" class="form-control"  <%=oldInput.confirmPassword %> required autofocus>
                                </p>

                                <% if (errorMessage) { %>
                                    <div class="erroMessage">
                                        <%= errorMessage %>
                                    </div>
                                    <% } %>
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <br>
                                        <p><input type="submit" value="Sign up"></p>
